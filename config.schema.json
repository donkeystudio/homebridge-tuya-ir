{
  "pluginAlias": "TuyaIR",
  "pluginType": "platform",
  "headerDisplay": "**Control your Tuya Smart IR based devices in HomeKit. Also works with Smart Home IR Blaster. You can add multiple Smart IR device to single configuration.**",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "TuyaIR"
      },
      "tuyaAPIClientId": {
        "title": "Client ID",
        "type": "string",
        "required": true,
        "default": "",
        "description": "Your Tuya IOT cloud project's client ID"
      },
      "tuyaAPISecret": {
        "title": "Client Secret",
        "type": "string",
        "required": true,
        "default": "",
        "description": "Your Tuya IOT cloud project's secret"
      },
      "deviceRegion": {
        "title": "Device Region",
        "type": "string",
        "required": true,
        "default": "",
        "oneOf": [
          {
            "title": "India",
            "enum": [
              "in"
            ]
          },
          {
            "title": "Europe",
            "enum": [
              "eu"
            ]
          },
          {
            "title": "China",
            "enum": [
              "cn"
            ]
          },
          {
            "title": "America",
            "enum": [
              "us"
            ]
          }
        ]
      },
      "smartIR": {
        "title": "List of Smart IR Devices",
        "type": "array",
        "items": {
          "type": "object",
          "title": "Smart IR Details",
          "properties": {
            "deviceId": {
              "title": "Smart IR Device ID",
              "type": "string",
              "required": true,
              "default": "",
              "description": "Device Id of the Smart IR Device"
            },
            "autoFetchRemotesFromServer": {
              "title": "Fetch configured remotes automatically?",
              "type": "boolean",
              "required": true,
              "default": true,
              "description": "Uncheck this box if your IR remotes are not discovered automatically. You will need to add your remote IDs manually below"
            },
            "configuredRemotes": {
              "title": "List of configured Smart IR Remotes",
              "type": "array",
              "items": {
                "type": "object",
                "title": "Remote Details",
                "properties": {
                  "id": {
                    "title": "Remote Id",
                    "type": "string",
                    "description": "Remote ID",
                    "required": true
                  },
                  "diy": {
                    "title": "Is this Remote DIY?",
                    "type": "boolean",
                    "required": true
                  },
                  "model": {
                    "title": "Model",
                    "type": "string",
                    "required": false,
                    "default": "Unknown",
                    "description": "Model of the Remote"
                  },
                  "brand": {
                    "title": "Brand",
                    "type": "string",
                    "required": false,
                    "default": "Unknown",
                    "description": "Brand of the Remote"
                  },
                  "hasVSwing":{
                    "title": "Vertical Swing",
                    "type": "boolean",
                    "required": true,
                    "default": false
                  },
                  "swingSave":{
                    "title": "Can this fan remember swing mode?",
                    "type": "boolean",
                    "required": true,
                    "default": false
                  },
                  "swingPower":{
                    "title": "Can Swing/Speed button turn on the fan?",
                    "type": "boolean",
                    "required": true,
                    "default": false
                  }
                }
              },
              "condition": {
                "functionBody": "return model.smartIR[arrayIndices].autoFetchRemotesFromServer === false;"
              }
            }
          }
        }
      }
    }
  }
}